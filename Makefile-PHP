REPORT_DIR=./report

default: clean
	@composer update --dev

install: clean
	@composer install --prefer-source --no-dev

test:
	@./vendor/bin/phpunit

clean-test:
	@rm -rf $(REPORT_DIR)

coverage:
	@./vendor/bin/phpunit --coverage-html $(REPORT_DIR)

report: coverage
	@open $($REPORT_DIR)/index.html

clean: clean-test
	@rm -rf vendor
	@rm -f composer.lock

todo:
	@echo "@TODO"
	@echo "====="
	@grep -rn "@TODO" . | awk -F ":" '$$1 != "./Makefile" {print $$3; print $$1 $$2  }'
	@echo
	@echo "@todo"
	@echo "====="
	@grep -rn "@todo" . | awk -F ":" '$$1 != "./Makefile" {print $$3; print $$1 $$2  }'
